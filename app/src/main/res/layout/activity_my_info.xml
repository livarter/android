<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:id="@+id/fragmentContainer"
    tools:context=".mypage.membership.MyInfoActivity">

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/btnEdit"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_margin="30dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">


            <androidx.cardview.widget.CardView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="center"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="50dp"
                app:cardElevation="4dp">

                <ImageView
                    android:id="@+id/profile_image"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    tools:srcCompat="@drawable/badge1" />
            </androidx.cardview.widget.CardView>

            <!-- 이름 -->
            <TextView
                android:id="@+id/textNameLabel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="@dimen/font_small"
                android:layout_marginBottom="2dp"
                android:text="이름" />

            <TextView
                android:id="@+id/textNameValue"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/dark_grey"
                android:textSize="@dimen/font_small"
                android:layout_margin="2dp"
                android:text="홍길동" />

            <!-- 이메일 -->
            <TextView
                android:id="@+id/textEmailLabel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/font_small"
                android:textColor="@color/black"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="2dp"
                android:text="이메일" />

            <TextView
                android:id="@+id/textEmailValue"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textColor="@color/dark_grey"
                android:text="test@gmail.com" />

            <!-- 닉네임 -->
            <TextView
                android:id="@+id/textNicknameLabel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="@dimen/font_small"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="4dp"
                android:text="닉네임" />

            <TextView
                android:id="@+id/textNicknameValue"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/dark_grey"
                android:textSize="@dimen/font_small"
                android:text="자유로운 가구 수집가" />

            <!-- 전화 번호  -->
            <TextView
                android:id="@+id/textPhoneLabel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="@dimen/font_small"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="4dp"
                android:text="전화 번호" />

            <TextView
                android:id="@+id/textPhoneValue"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/dark_grey"
                android:textSize="@dimen/font_small"
                android:text="010-0000-0000" />

            <!-- 우편 번호  -->
            <TextView
                android:id="@+id/textZipCodeLabel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="@dimen/font_small"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="4dp"
                android:text="우편 번호" />
            <TextView
                android:id="@+id/textZipCodeValue"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/dark_grey"
                android:textSize="@dimen/font_small"
                android:text="03737" />

            <!-- 주소  -->
            <TextView
                android:id="@+id/textAddressLabel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="@dimen/font_small"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="4dp"
                android:text="주소" />

            <TextView
                android:id="@+id/textAddressValue"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/dark_grey"
                android:textSize="@dimen/font_small"
                android:text="서울특별시 동대문구 **동" />

            <!-- 생년 월일  -->
            <TextView
                android:id="@+id/textBirthLabel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="@dimen/font_small"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="4dp"
                android:text="생년 월일" />

            <TextView
                android:id="@+id/textBirthValue"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/dark_grey"
                android:textSize="@dimen/font_small"
                android:text="23.01.20" />
        </LinearLayout>
    </ScrollView>
    <Button
        android:id="@+id/btnEdit"
        android:layout_width="380dp"
        android:layout_height="58dp"
        android:textSize="@dimen/font_medium"
        android:layout_marginBottom="20dp"
        android:text="회원 정보 수정하기"
        android:elevation="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>