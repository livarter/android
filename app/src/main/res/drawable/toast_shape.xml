<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">
    <!-- View에 적용할 배경색 -->
    <solid android:color="#F4F4F4" />
    <!-- View의 테두리 -->
    <stroke
        android:width="1dp"
        android:color="#EFEFEF" />
    <!-- View의 모서리 둥글기 -->
    <corners android:radius="10dp" />

    <size
        android:height="70dp" />

    <padding
        android:bottom="0dp"
        android:left="0dp"
        android:right="0dp"
        android:top="0dp" />
</shape>